<?xml version="1.0"?>
<implementation>
  <functions>
  </functions>
  <files>L_ALTSonos.lua</files>
  <startup>initstatus</startup>
  <actionList>
		<action>
			<serviceId>urn:upnp-org:serviceId:altsonos1</serviceId>
			<name>SetDebug</name>
			<job>
			setDebugMode(lul_device,lul_settings.newDebugMode)
			return 4,0
			</job>
		</action>
		<action>
			<serviceId>urn:upnp-org:serviceId:altsonos1</serviceId>
			<name>SendCmd</name>
			<job>
			sendCmd(lul_device,lul_settings.newCmd)
			return 4,0
			</job>
		</action>		         
		<action>
			<serviceId>urn:upnp-org:serviceId:altsonos1</serviceId>
			<name>PowerOn</name>
			<job>
			sendCmd(lul_device,"PWON")
			return 4,0
			</job>
		</action>		         
		<action>
			<serviceId>urn:upnp-org:serviceId:altsonos1</serviceId>
			<name>StandBy</name>
			<job>
			sendCmd(lul_device,"PWSTANDBY")
			return 4,0
			</job>
		</action>		         
		<action>
			<serviceId>urn:upnp-org:serviceId:altsonos1</serviceId>
			<name>Mute</name>
			<job>
			setMute(lul_device,lul_settings.MuteOn)
			return 4,0
			</job>
		</action>		         
		
	</actionList>
</implementation>
